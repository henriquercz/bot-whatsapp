# ===== GOOGLE GEMINI API =====
GEMINI_API_KEY=sua-chave-aqui

# ===== AMBIENTE =====
NODE_ENV=production
LOG_LEVEL=info

# ===== PATHS =====
DB_PATH=./data/database.sqlite
CHATS_CONFIG_PATH=./config/chats.json

# ===== WHATSAPP =====
WHATSAPP_BROWSER_NAME=WhatsApp AI Bot
# Número de telefone para usar Pairing Code (sem +, ex: 5511999999999)
# Se não definido, usará QR Code
WHATSAPP_PHONE_NUMBER=

# ===== IA SETTINGS =====
AI_TEMPERATURE=0.85
AI_MAX_TOKENS=500
AI_TOP_K=40
AI_TOP_P=0.95

# ===== BOT SETTINGS =====
BOT_RESPONSE_DELAY=2000
BOT_AUTO_LEARN=true
BOT_LEARNING_INTERVAL=3600000

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS_PER_MINUTE=60
